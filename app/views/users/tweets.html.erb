<div class="container">
  <div class="row">
      <div class="col-xs-4">
        <h1>this is current user's tweet view</h1>
          <div class="user_details">
            <%=image_tag (@user.avatar)%>
            <%=@user.name%></br>
            <%=@user.introduction%></br>
          </div>
          <div class="button">
            <% if current_user == @user %>
              <%= link_to "Edit Profile",edit_user_path(current_user), class: "btn btn-primary"%>
            <% else %>
              <%= link_to "Following",followships_path, method: :create, class: "btn btn-primary"%>
            <% end %>
          </div>
      </div>
      <div class="col-xs-8">

      </div>
  </div>
</div>
