<div class="container">
  <div class="row">

      <div class="col-xs-3"> <!--grid 3,1,8-->
        <%= render partial: "shared/user_intro"%>
      </div>

      <div class="col-xs-offset-1 col-xs-8">
        <%@followers.each do |follower| %>
          <div class="col-xs-12 follower_item">
             <div class="col-xs-3">
                 <div class= "item_picture">
                   <%= image_tag follower.avatar %>
                 </div>
             </div>
             <div class="col-xs-9">
                   <%= follower.name %><br>
                   <%= truncate(follower.introduction , length:150) %>
                   <div class="button">
                     <%if current_user != @user %>
                        <% if current_user.following?(@user) %>
                           <%= link_to "Unfollow",followship_path(@user), method: :delete, class:"btn btn-primary" %>
                        <% else %>
                           <%= link_to "Follow",followships_path(following_id: @user), method: :post, class:"btn btn-primary"%>
                        <% end %>
                     <% end %>
                   </div>
             </div>
          </div>
        <%end%>
       </div>



  </div> <!--container-->
</div> <!--row-->
