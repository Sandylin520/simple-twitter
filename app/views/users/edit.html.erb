<div class="container">
  <div class="row">

   <%= form_for @user do |f| %>
       <div class="col-xs-4">
                 <div class= "each_user_picture">
                   <% if @user.avatar? %> <!--return nil or true -->
                       <%= image_tag('/avatar/'+ 'user1' + '.jpg', class: "img-responsive center-block img-rounded img") %>
                   <% end %>
                 </div>
                  <!--  由上方程式碼取代
                  <%= image_tag (@user.avatar) if @user.avatar? %>
                  -->
                 <div class="form-group avatar-button col-xs-10 col-xs-offset-2">
                   <%= f.file_field :avatar %>
                 </div>
         </div>

         <div class="col-xs-8">
              <div class="form-group">
                <%= f.label :Name %>
                <%= f.text_field :name, placeholder: "Name",class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :Introduction %>
                <%= f.text_field :introduction, placeholder: "Type anything about you here...",class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit %> <!--rails api:f.submit 會依據傳入的＠user 自動判斷顯示create or update -->
                <%= button_tag "Cancel", :type => 'reset' %>   <!--使用rais api:button_tag 增加cancel按鈕-->
              </div>
         </div>
   <%end%>
  </div>
</div>
