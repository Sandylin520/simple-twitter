<div class="container">
  <div class="row">

     <%= form_for @user do |f| %>
       <div class="col-xs-4">
              <div class="form-group">
                <%= image_tag (@user.avatar) if @user.avatar? %>
                <%= f.file_field :avatar %>
              </div>
       </div>
       <div class="col-xs-8">
              <div class="form-group">
                <%= f.text_field :name, placeholder: "Name",class: "form-control" %><br />
              </div>
              <div class="form-group">
                <%= f.text_field :introduction, placeholder: "Type anything about you here...",class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit %>
              </div>
           <% end %>
       </div>



  </div>
</div>
