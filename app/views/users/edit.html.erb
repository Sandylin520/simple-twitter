<div class="container">
  <div class="row">

     <%= form_for @user do |f| %>
         <div class="col-xs-4">
              <div class="form-group">
                 <div class= "item_picture">
                  <%= image_tag (@user.avatar) if @user.avatar? %>
                 </div>
                 <%= f.file_field :avatar %>
              </div>
        </div>

         <div class="col-xs-8">
              <div class="form-group">
                <%= f.label :Name %>
                <%= f.text_field :name, placeholder: "Name",class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :Introduction %>
                <%= f.text_field :introduction, placeholder: "Type anything about you here...",class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.submit %> <!--rails api:f.submit 會依據傳入的＠user 自動判斷顯示create or update -->
                <%= button_tag "Cancel", :type => 'reset' %>   <!--使用rais api:button_tag 增加cancel按鈕-->
              </div>
          </div>

     <% end %>




  </div>
</div>
