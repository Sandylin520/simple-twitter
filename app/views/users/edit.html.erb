<div class="container">

  <div class="row">
       <div class="col-xs-4">
          <%= link_to edit_user(@user) do %>
            <%= image_tag (user.avatar),class: "img-responsive center-block" %>
          <% end %>
       </div>


  <div class="row">
       <div class="col-xs-8">
           <%= form_for @user do |f| %>
              <%= f.label :name %>:
              <%= f.text_field :first_name %><br />

              <%= f.label :last_name %>:
              <%= f.text_field :last_name %><br />

              <%= f.submit %>
       </div>
  </div>

</div>
