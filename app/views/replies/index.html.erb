<div class="container">
  <div class="row">

      <div class="col-xs-3"> <!--grid 3,1,8-->
          <!--該tweet 發表人茲ㄛㄌㄤˋ-->
          <div class="user_details">
             <!--tweet照片-->
              <div class="user_picture">
                <%= image_tag (@user.avatar)%>
              </div>
              <p><%=@user.name%></p></br>
              <p><%=@user.introduction%></p>
          </div>
          <div class= "count">
              Tweets    <%= @tweets.count %><br>
              Following <%= @followings.count %><br>
              Follower  <%= @followers.count %><br>
              like      <%= @likes.count %><br>
          </div>
          <br>          
          <!--依據當前user是否爲tweet發文者顯示不同按鈕內容-->
          <div class="button">
            <% if current_user == @user %>
              <%= link_to "Edit Profile",edit_user_path(@user), class: "btn btn-primary"%>
            <% else %>
              <%= link_to "Following",followings_user_path(@user), method: :create, class: "btn btn-primary"%>
            <% end %>
          </div>
      </div>

      <div class="col-xs-offset-1 col-xs-8">

        <!-- tweet區-->
        <div class="col-xs-12">
             <h2>Tweets</h2>
             <div class="tweet_item">
                <!--tweet user圖片-->
                 <div class="tweet_item_picture col-xs-3">
                   <%=image_tag (@tweet.user.avatar)%>
                 </div>

                 <!--tweet user細節-->
                 <div class="tweet_item_details col-xs-offset-1 col-xs-8">
                   <%=@tweet.user.name %>,
                   <%=@tweet.created_at.to_date %></br>
                   <%=@tweet.description %></br>
                 </div>

                 <!--tweet reply unlike按鈕區-->
                 <div class="tweet_item_details col-xs-offset-4 col-xs-8">
                   <%=link_to "Reply",tweet_replies_path(@tweet)%>
                   <%if @tweet.is_liked?(current_user)%>
                     <%= link_to "Unlike",unlike_tweet_path(@tweet), method: :post %>
                   <%else%>
                     <%= link_to "Like",like_tweet_path(@tweet), method: :post   %>
                   <%end%>
                 </div>
                 <div class="clearfix"></div>
             </div>  <!--tweet_item-->

              <!-- reply區-->
              <h2>Replies</h2>
                <% @replies.each do |reply| %>
                   <div class="reply_item">
                       <div class="tweet_item_picture col-xs-3"><!--3 1 8-->
                         <%= image_tag (reply.user.avatar) %>
                       </div>
                       <div class="tweet_item_details col-xs-offset-1 col-xs-8 ">
                         <%= link_to reply.user.name,tweets_user_path(reply.user.id) %>
                         <%= reply.created_at.to_date %></br>
                         <%= reply.comment %>
                       </div>
                       <div class="clearfix"></div>
                   </div> <!--reply_item-->
                <% end %>

                <%= form_for [@tweet,@reply] do |f| %>
                      <div class="form-group">
                         <%=f.text_field :comment, class:"form-control", placeholder: "Enter your reply" %>
                      </div>
                      <div class="submit_button">
                         <%= f.submit class: "btn btn-primary" %>
                      </div>
                <% end %>

      </div> <!--div class="col-xs-12"-->
    </div>  <!--div class="col-xs-offset-1 col-xs-8-->
  </div> <!--container-->
</div> <!--row-->
