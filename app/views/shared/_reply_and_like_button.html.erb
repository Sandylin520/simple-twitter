<%= link_to tweet_replies_path(tweet) do %>
   <i class="far fa-comment">(<%=tweet.replies_count%>)</i>
<% end %>
<% if  tweet.is_liked?(current_user) %><!-- 已經like顯示unlike按鈕-->
   <%= link_to unlike_tweet_path(tweet), method: :post do%>
     <i class="fas fa-heart">(<%=tweet.likes_count%>)</i>
   <% end %>
<% else %><!--未like則顯示like數量,並且可以點選like-->
   <%= link_to like_tweet_path(tweet), method: :post do%>
     <i class="far fa-heart">(<%=tweet.likes_count%>)</i>
   <% end %>
<% end %>
