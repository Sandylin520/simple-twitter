<div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 ">
    <div class="block">
          <h2>Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <!-- 增加 name 輸入框之後，需要讓 name 屬性通過 Strong Parameter 驗證 -->
            <div class="field form-group">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, placeholder: "Enter name", class:"form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, placeholder: "Enter email", class:"form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", placeholder:"Enter password", class:"form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter password", class:"form-control" %>
            </div>
            <br />
            <div class="actions">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>
          <br />
          <%= render "devise/shared/links" %>
  </div>
</div>
