<div class="container">
      <div class= "row log_in">
        <div class="col-md-8 col-md-offset-2">
          <div class="block">
           <h2 >Log in</h2>
           <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field form-group">
                 <%= f.label :email %><br />
                 <%= f.email_field :email, autofocus: true, placeholder: "Enter email", class:"form-control" %>
              </div>


              <div class="field form-group">
               <%= f.label :password %><br />
               <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", class:"form-control" %>
              </div>


              <% if devise_mapping.rememberable? -%>
                <div class="field form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
              <% end -%>

               <div class="form-group">
                   <%= f.submit "Log in",:class=>'submit_button' %>
               </div>
              <% end %>

               <br>
               <div class="form-group">
                  <%= render "devise/shared/links" %>
               </div>
             </div>
          </div>
        </div>
</div>
