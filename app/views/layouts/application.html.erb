<!DOCTYPE html>
<html>
  <head>
    <title>SimpleTwitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">



          <ul class="nav navbar-nav">
              <li><%=link_to 'LOGO',root_path, class: "navbar-brand"%></li>
          </ul>
          <ul class="nav navbar-nav pull-right">
              <% if current_user %> <!--登入狀態，會回傳一個 User instance；若沒有登入，就會回傳 nil-->
                    <li>Hi, <%=current_user.name%> </li>
                    <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
                    <li class="dropdown">
                       <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                          <li><%= link_to 'Profile', tweets_user_path(current_user) %></li> <!--看user自己的tweet頁面-->
                          <li><%= link_to 'Change Password', edit_user_registration_path %></li>
                      </ul>
                    </li>
                <% else %>
                    <li><%= link_to 'Sign Up', new_user_registration_path %></li>
                    <li><%= link_to 'Sign In', new_user_session_path %></li>
                <% end %>
          </ul>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
     </nav>


      <!--Use bootstrap Dismissible alertsv-->
      <div class="container">
        <% if notice %>
          <div class="alert alert-warning alert-dismissible" role="alert">
             <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             <%= notice %>
          </div>
        <% end %>
        <% if alert %>
          <div class="alert alert-warning alert-dismissible" role="alert">
             <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             <%= alert %>.
          </div>
        <% end %>
      </div>

      <div class="container">
      <%= yield %>
      </div>

  </body>
</html>
